{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "pnpm prisma generate",
    "db:migrate:prod": "pnpm prisma migrate deploy",
    "db:migrate:dev": "pnpm prisma migrate dev",
    "db:push": "pnpm prisma db push",
    "db:studio": "pnpm prisma studio"
  },
  "prisma": {
    "schema": "src/v1/lib/db/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "5.18.0",
    "@repo/logger": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "prisma": "^5.18.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5"
  }
}
